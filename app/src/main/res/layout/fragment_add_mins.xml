<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@android:color/white"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="com.improve.latetrain.AddMinsFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
            android:id="@+id/minLateEt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/departStationEt"
            android:layout_marginTop="16dp"
            android:minWidth="70dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:inputType="number"
            android:textColorHint="@color/colorAccent"
            android:hint="How long are you delayed?"/>


    <EditText
            android:id="@+id/departStationEt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@android:color/holo_red_light"
            android:minWidth="70dp"
            android:hint="Where are you departing from?"/>

    <EditText
            android:id="@+id/destinationStationEt"
            android:textColorHint="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/departStationEt"
            android:backgroundTint="@android:color/holo_red_light"
            android:minWidth="70dp"
            android:hint="Where is your train going to?"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorAccent"
            android:text="Share"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
